	}
	${1:#container} {
		text-align: left;
		width: ${2:100px};
		margin: 0 auto;
	}${3}
# Text image replacement
snippet imgr
	text-indent: -9999em;
	background: url(${1:logo.gif}) no-repeat;
	width: ${2:100px};
	height: ${3:100px};
	overflow: hidden;
# Text image replacement for inputs
snippet btimgr
	background: url(${1:bt.gif}) no-repeat;
	width: ${2:100px};
	height: ${3:20px};
	content: "";
	display: inline-block;
	line-height: 0;
	text-indent: -9999px;
	border: none;
