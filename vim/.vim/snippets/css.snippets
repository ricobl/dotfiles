# UTILITIES
# Definitions
snippet {
	{
		${1}
	}
# Comment line
snippet com
	/* ${1:comment} */${2}
# Comment block
snippet comb
	/* ${1:comment} */
	${2}
	/* end $1 */
# DIMENSIONS
snippet w
	width: ${1:100px};${2}
snippet h
	height: ${1:100px};${2}
# PADDING
snippet p
	padding: ${1:10px};${2}
snippet pt
