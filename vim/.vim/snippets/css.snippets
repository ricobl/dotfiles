snippet bt
	border-top: ${1:1px} ${2:solid} ${3:red};${4}
snippet br
	border-right: ${1:1px} ${2:solid} ${3:red};${4}
snippet bb
	border-bottom: ${1:1px} ${2:solid} ${3:red};${4}
snippet bl
	border-left: ${1:1px} ${2:solid} ${3:red};${4}
snippet bn
	border: none;${1}
# BACKGROUND
snippet ba
	background: ${1:red};${2}
snippet bau
	background: url(${1});${2}
snippet bai
	background-image: url(${1});${2}
snippet bac
	background-color: ${1:red};${2}
snippet bar
	background-repeat: ${1:no-repeat};
snippet nor
	no-repeat
# FLOATS
snippet f
	float: ${1:left};${2}
snippet fl
	float: ${1:left};${2}
snippet fr
	float: ${1:right};${2}
snippet fn
	float: ${1:none};${2}
snippet c
	clear: ${1:both};${2}
snippet cb
	clear: ${1:both};${2}
snippet cl
	clear: ${1:left};${2}
snippet cr
	clear: ${1:right};${2}
# TEXT
snippet ta
	text-align: ${1:center};${2}
snippet ti
	text-indent: ${1:-9999em};${2}
snippet td
	text-decoration: ${1:none};${2}
snippet fs
	font-size: ${1:10px};${2}
snippet fw
	font-weight: ${1:bold};${2}
snippet co
	color: ${1:red};${2}
snippet lh
	line-height: ${1:20px};${2}
# DISPLAY
snippet d
	display: ${1:block};${2}
snippet db
	display: ${1:block};${2}
snippet di
	display: ${1:inline};${2}
snippet dib
	display: ${1:inline-block};${2}
snippet o
	overflow: ${1:hidden};${2}
# TAGS / SNIPPETS
snippet globalreset
	body,div,dl,dt,dd,ul,ol,li,h1,h2,h3,h4,h5,h6,pre,form,fieldset,input,textarea,p,blockquote,th,td {
		margin: 0;
		padding: 0;
		font-family: Arial, Helvetica, sans-serif;
	}
	h1,h2,h3,h4,h5,h6 {
		font-size: 100%;
	}
	ol,ul {
		list-style: none;
	}
	table {
		border-collapse: collapse;
		border-spacing: 0;
	}
	a img {
		border: 0;
	}
